<% include partials/header.ejs %>
	<style>
		.jug{
			color: black;
			max-width: 98%;
			border:0.5rem solid #20385a ;
			padding: 20px;
		}

		#right{
			direction: rtl;
		}

		textarea{
			width: 100%;
		}

		input[type=checkbox]{
			display: inline;
		}

		h2{
			color: #77b800;
			margin-bottom: 30px;
		}

		input[type=radio] {
			width: 30px;
			height: 30px;
		}

		.radio{
			margin-right: 50px;
		}

		label{
			font-weight: bold;
		}
	</style>
	<form class="needs-validation" novalidate method="POST" action="/properties/<%=property['id']%>?_method=PUT">
		    <div class="container jug">	
				<a href="/properties/<%=property['id']%>" class="btn btn-danger btn-lg btn-block" role="button" aria-pressed="true">Cancel</a>
				<h2>Listing Type</h2>

				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="listingType" id="inlineRadio1" value="PG">
				  <label class="form-check-label radio" for="inlineRadio1"><strong>PG</strong></label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="listingType" id="inlineRadio2" value="Flat">
				  <label class="form-check-label radio" for="inlineRadio2"><strong>Flat</strong></label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="listingType" id="inlineRadio1" value="Room">
				  <label class="form-check-label radio" for="inlineRadio1"><strong>Room</strong></label>
				</div>
				
				<div class="form-row">
				   	<div class="col">
				    	<label>Beds</label>	
				      	<select name="beds" class="form-control form-control-lg">
				      		<option value="1">1</option>
				      		<option value="2">2</option>
				      		<option value="3">3</option>
				      		<option value="4">4</option>
				      		<option value="5">5</option>
				      		<option value="6">6</option>
				      	</select>
				    </div>
				    <div class="col">
				    	<label>Baths</label>	
				      	<select name="baths" class="form-control form-control-lg">
				      		<option value="1">1</option>
				      		<option value="2">2</option>
				      		<option value="3">3</option>
				      		<option value="4">4</option>
				      		<option value="5">5</option>
				      		<option value="6">6</option>
				      	</select>
				    </div>
				    <div class="col">
				    	<label>Square Feet</label>	
				      	<input id="right" type="text" name="size" value="<%=property.size%>" class="form-control form-control-lg POC__input-field" title="Please enter square footage" placeholder="SF" required>
				      	<div class="valid-feedback">
					        Looks good!
					    </div>
				      	<div class="invalid-feedback">
				          Please enter square footage.
				        </div>
				    </div>
			    </div>

			    <div class="form-row">
				    <div class="col-md-4">
				    	<label>Rent</label>	
				      	<input id="right" type="text" name="rent" value="<%=property.rent%>" class="form-control form-control-lg" title="Please enter rent" placeholder="Rs/month" required>
				        <div class="valid-feedback">
					        Looks good!
					    </div>
				      	<div class="invalid-feedback">
				          Please enter Rent
				        </div>
				    </div>
				    <div class="col-md-4">
				    	<label>Deposit</label>	
				      	<input id="right" type="text" name="deposit" value="<%=property.deposit%>" class="form-control form-control-lg" placeholder="Rs" required>
				      	<div class="valid-feedback">
					        Looks good!
					    </div>
				      	<div class="invalid-feedback">
				          Please enter deposit.
				        </div>
				    </div>
				    <div class="col-md-2">	
				    	<label>Available</label>
				    	<input type="date" class="form-control form-control-lg" name="date" value="<%=property.date%>" required>	
				    </div>
				    <div class="col-md-2">	
				    	<label>Lease Length</label>	
				      	<input id="right" type="text" name="days" value="<%=property.days%>" class="form-control form-control-lg" title="Please enter rent" placeholder="1-36months" required>
				      	
				    </div>
			    </div>
			</div>

				    
            <div class="container jug">
				    <h2>Address</h2>
				    <div class="form-group col-md-12">
					    <label>Line 1</label>
					    <input type="text" name="line1" value="<%=property.address.line1%>" class="form-control form-control-lg" placeholder="1234 Main St" required>
					</div>
					<div class="form-group col-md-12">
					    <label>line 2</label>
					    <input type="text" name="line2" value="<%=property.address.line2%>" class="form-control form-control-lg" placeholder="Apartment, studio, or floor" required>
					</div>
					<div class="form-row">
					    <div class="form-group col-md-5">
					      <label>City</label>
					      <input type="text" name="city" value="<%=property.address.city%>" class="form-control form-control-lg" required>
					    </div>
					    <div class="form-group col-md-5">
					      <label>State</label>
					      <input type="text" name="state" value="<%=property.address.state%>" class="form-control form-control-lg" required>
					    </div>
					    <div class="form-group col-md-2">
					      <label>Zip</label>
					      <input type="text" name="zip" value="<%=property.address.zip%>" class="form-control form-control-lg" required>
					    </div>
				    </div>
			    </div>
			<!-- </div>  -->
			   
            <div class="container jug">
	   			<h2>Image</h2>
	   			<input style="width:50%;" class="form-control form-control-lg" type="text" name="image" value="<%=property.image%>" placeholder="Image Url">
            </div>

            <div class="container jug">
            	<h2>Your Role</h2>
	   			<p>What is your role for this listing?</p>
	   			<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="Owner">
				  <label class="form-check-label radio" for="inlineRadio1"><strong>Owner</strong></label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="role" id="inlineRadio2" value="Agent">
				  <label class="form-check-label radio" for="inlineRadio2"><strong>Agent/Broker</strong></label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="Manager">
				  <label class="form-check-label radio" for="inlineRadio1"><strong>Property Manager</strong></label>
				</div>
            </div>

            <div class="container jug">
            	<h2>Contact</h2>
				<div class="form-row">
				    <div class="col">
				      <input type="text" name="fName" value="<%=property.details.fName%>" class="form-group form-control form-control-lg" placeholder="First name" required>
				    </div>
				    <div class="col">
				      <input type="text" name="mName" value="<%=property.details.mName%>" class="form-group form-control form-control-lg" placeholder="Middle name">
				    </div>
				    <div class="col">
				      <input type="text" name="lName" value="<%=property.details.lName%>" class="form-group form-control form-control-lg" placeholder="Last name" required>
				    </div>
			  	</div>
			  	<div class="form-row">
				    <div class="col">				      				     
					      <div class="input-group">
					        <div class="input-group-prepend">
					          <span class="input-group-text" id="validationTooltipUsernamePrepend">@</span>
					        </div>
					        <input type="email" class="form-control form-control-lg" name="email" value="<%=property.details.email%>" placeholder="Email" aria-describedby="validationTooltipUsernamePrepend" required>
					        <div class="invalid-tooltip">
					          Please choose a unique and valid username.
					        </div>
					      </div>
					      
				    </div>
				    <div class="col">
				    	 <div class="input-group">
					        <div class="input-group-prepend">
					          <span class="input-group-text" id="validationTooltipUsernamePrepend">+91</span>
					        </div>
					        <input type="text" class="form-control form-control-lg" name="phone" value="<%=property.details.phone%>" placeholder="Phone" aria-describedby="validationTooltipUsernamePrepend" required>					 
					      </div>
				    </div>
				    <div class="col">
				    	<select name="preference" class="form-group form-control form-control-lg" title="Contact Preference" placeholder="Contact Preference">
				    		<option value="Contact Preference">Contact Preference</option>
				      		<option value="Phone & Email">Phone and Email</option>
				      		<option value="Phone Only">Phone Only</option>
				      		<option value="Email Only">Email Only</option>				  
				      	</select>
				    </div>
			  	</div>
            </div>

            <div class="container jug">
            	<h2>Description and Amenities(optional)</h2>
			  	<textarea rows="6" name="info" placeholder="Tell us about your place." ><%=property.info%></textarea>
			  	<input type="submit" name="submit" class="btn btn-primary btn-lg btn-block">
            </div>
			<!-- </div> -->
		<!-- </div> -->
	</form>

	
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

	<script>
		// Example starter JavaScript for disabling form submissions if there are invalid fields
		(function() {
		  'use strict';
		  window.addEventListener('load', function() {
		    // Fetch all the forms we want to apply custom Bootstrap validation styles to
		    var forms = document.getElementsByClassName('needs-validation');
		    // Loop over them and prevent submission
		    var validation = Array.prototype.filter.call(forms, function(form) {
		      form.addEventListener('submit', function(event) {
		        if (form.checkValidity() === false) {
		          event.preventDefault();
		          event.stopPropagation();
		        }
		        form.classList.add('was-validated');
		      }, false);
		    });
		  }, false);
		})();
	</script>
